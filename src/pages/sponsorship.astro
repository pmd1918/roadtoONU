---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
---

<Layout title="Sponsor the 62nd National Conclave - Phi Mu Delta">
  <main class="sponsorship-page">
    
    <!-- Hero -->
    <section class="sponsor-hero">
      <div class="hero-inner">
        <span class="hero-eyebrow">62nd National Conclave</span>
        <h1>Partner With Us</h1>
        <p class="hero-lead">
          One hundred years of Mu Beta. One weekend in Ada, Ohio. 
          One opportunity to be part of something bigger.
        </p>
      </div>
    </section>

    <!-- Current Sponsors Banner -->
    <div class="sponsor-banner">
      <!-- Top Marquee -->
      <div class="sponsor-marquee">
        <div class="sponsor-marquee-track">
          <div class="sponsor-marquee-content">
            <img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span>
          </div>
          <div class="sponsor-marquee-content">
            <img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span>
          </div>
        </div>
      </div>
      
      <!-- Sponsor Logos -->
      <div class="sponsor-logos">
        <div class="sponsor-logo-item">
          <img src="/images/orange-black.png" alt="Educational Foundation" />
          <div class="sponsor-logo-text">
            <span class="sponsor-name">The Phi Mu Delta</span>
            <span class="sponsor-sub">Educational Foundation</span>
          </div>
        </div>
        
        <div class="sponsor-center">
          <span class="sponsor-title">Featured Sponsors</span>
        </div>
        
        <div class="sponsor-logo-item reverse">
          <img src="/images/sponsors/Nu Beta Alumni Association Logo - gold.png" alt="Nu Beta Alumni Association" />
          <div class="sponsor-logo-text">
            <span class="sponsor-name">The Nu Beta</span>
            <span class="sponsor-sub">Alumni Association</span>
          </div>
        </div>
      </div>
      
      <!-- Bottom Marquee -->
      <div class="sponsor-marquee">
        <div class="sponsor-marquee-track">
          <div class="sponsor-marquee-content">
            <img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span>
          </div>
          <div class="sponsor-marquee-content">
            <img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span><img src="/ScalesOf Justice.svg" alt="" /><span>All Roads Lead to Ada</span>
          </div>
        </div>
      </div>
    </div>

    <!-- The Ask -->
    <section class="the-ask">
      <Container>
        <div class="ask-content">
          <div class="ask-text">
            <h2>Here's the deal.</h2>
            <p>
              We're bringing 200+ brothers—undergrads, alumni, and national leadership—together 
              for the first time since 2019. They're traveling from across the country to 
              celebrate a century of Mu Beta at Ohio Northern.
            </p>
            <p>
              Your support keeps registration affordable for undergraduates, 
              funds scholarships, and makes this weekend unforgettable.
            </p>
            <p class="ask-cta-text">
              In return? Your name in front of motivated professionals, future leaders, 
              and a network that remembers who showed up.
            </p>
          </div>
          <div class="ask-stats">
            <div class="stat">
              <span class="stat-number">200+</span>
              <span class="stat-label">Expected Attendees</span>
            </div>
            <div class="stat">
              <span class="stat-number">35</span>
              <span class="stat-label">Chapters Represented</span>
            </div>
            <div class="stat">
              <span class="stat-number">100</span>
              <span class="stat-label">Years of Brotherhood</span>
            </div>
          </div>
        </div>
      </Container>
    </section>

    <!-- Tiers - Less Rigid -->
    <section class="tiers-section">
      <Container>
        <h2 class="tiers-heading">Pick Your Level</h2>
        <p class="tiers-subhead">Or reach out and we'll build something custom.</p>
        
        <div class="tiers-layout">
          <div class="tier tier-platinum">
            <div class="tier-header">
              <span class="tier-label">Centennial Partner</span>
              <span class="tier-amount">$5,000+</span>
            </div>
            <div class="tier-body">
              <p>The full treatment. Logo everywhere, named event sponsorship, 4 registrations, exhibit space, and a seat at the table.</p>
              <a href="mailto:give@phimudelta.org?subject=Centennial%20Partner%20Inquiry" class="tier-link">Let's talk →</a>
            </div>
          </div>

          <div class="tier tier-gold">
            <div class="tier-header">
              <span class="tier-label">Brotherhood Sponsor</span>
              <span class="tier-amount">$2,500</span>
            </div>
            <div class="tier-body">
              <p>Logo on signage and materials, program ad, banquet recognition, 2 registrations, social shoutouts.</p>
              <a href="mailto:give@phimudelta.org?subject=Brotherhood%20Sponsor%20Inquiry" class="tier-link">I'm in →</a>
            </div>
          </div>

          <div class="tier tier-silver">
            <div class="tier-header">
              <span class="tier-label">Chapter Supporter</span>
              <span class="tier-amount">$1,000</span>
            </div>
            <div class="tier-body">
              <p>Program listing, banquet recognition, 1 registration, and our genuine appreciation.</p>
              <a href="mailto:give@phimudelta.org?subject=Chapter%20Supporter%20Inquiry" class="tier-link">Count me in →</a>
            </div>
          </div>

          <div class="tier tier-bronze">
            <div class="tier-header">
              <span class="tier-label">Friend of PMD</span>
              <span class="tier-amount">$500</span>
            </div>
            <div class="tier-body">
              <p>Name in program, public thank you. Simple, meaningful.</p>
              <a href="mailto:give@phimudelta.org?subject=Friend%20Contribution" class="tier-link">Sign me up →</a>
            </div>
          </div>
        </div>
      </Container>
    </section>

    <!-- Event Sponsorships -->
    <section class="events-section">
      <Container>
        <h2>Name on the Marquee</h2>
        <p class="events-intro">Want your brand tied to a specific moment? These are the flagship events.</p>
        
        <div class="events-list">
          <div class="event-item">
            <span class="event-name">Awards Banquet</span>
            <span class="event-desc">Saturday night. The big one.</span>
            <span class="event-price">$3,000</span>
          </div>
          <div class="event-item">
            <span class="event-name">Centennial Celebration</span>
            <span class="event-desc">Mu Beta's 100-year moment.</span>
            <span class="event-price">$2,500</span>
          </div>
          <div class="event-item">
            <span class="event-name">Wilson Factory Tour</span>
            <span class="event-desc">Where every NFL ball is made.</span>
            <span class="event-price">$2,000</span>
          </div>
          <div class="event-item">
            <span class="event-name">Leadership Workshop</span>
            <span class="event-desc">Undergrad development sessions.</span>
            <span class="event-price">$1,500</span>
          </div>
          <div class="event-item">
            <span class="event-name">Brotherhood Night</span>
            <span class="event-desc">Wednesday welcome reception.</span>
            <span class="event-price">$1,000</span>
          </div>
        </div>
      </Container>
    </section>

    <!-- In-Kind -->
    <section class="inkind-section">
      <Container>
        <div class="inkind-box">
          <h3>Not writing a check?</h3>
          <p>
            We also accept in-kind support—raffle items, merchandise, services, whatever you've got. 
            If it helps make the weekend better, we want to hear about it.
          </p>
          <a href="mailto:give@phimudelta.org?subject=In-Kind%20Donation" class="inkind-link">Reach out →</a>
        </div>
      </Container>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <Container>
        <div class="cta-inner">
          <h2>Questions? Ideas?</h2>
          <p>We're flexible. Let's figure out what works.</p>
          <a href="mailto:give@phimudelta.org?subject=Sponsorship%20Inquiry" class="cta-button">Get in touch</a>
          <a href="/" class="back-link">← Back to Conclave site</a>
        </div>
      </Container>
    </section>

  </main>
</Layout>

<style>
  .sponsorship-page {
    background: #f4f7ff;
  }

  /* Sponsor Banner */
  .sponsor-banner {
    background: linear-gradient(180deg, #ea7600 0%, #f1d44b 20%, #f4f7ff 40%, #f4f7ff 60%, #f1d44b 80%, #ea7600 100%);
    position: relative;
  }

  .sponsor-marquee {
    height: 2.5rem;
    overflow: hidden;
    position: relative;
  }

  .sponsor-marquee-track {
    display: flex;
    width: 200%;
    animation: marquee-scroll 25s linear infinite;
  }

  .sponsor-marquee-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    white-space: nowrap;
    padding-right: 1rem;
  }

  .sponsor-marquee-content img {
    width: 20px;
    height: 20px;
    filter: brightness(0);
    opacity: 0.7;
  }

  .sponsor-marquee-content span {
    font-family: 'Have Heart', cursive;
    font-size: 1.25rem;
    color: #212322;
    opacity: 0.7;
  }

  @keyframes marquee-scroll {
    from { transform: translateX(-50%); }
    to { transform: translateX(0); }
  }

  .sponsor-logos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem 1rem;
  }

  @media (max-width: 768px) {
    .sponsor-logos {
      flex-direction: column;
      gap: 1rem;
    }
  }

  .sponsor-logo-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    filter: grayscale(1);
    transition: filter 0.2s;
  }

  .sponsor-logo-item:hover {
    filter: grayscale(0);
  }

  .sponsor-logo-item.reverse {
    flex-direction: row-reverse;
  }

  .sponsor-logo-item img {
    height: 3.5rem;
    width: auto;
  }

  .sponsor-logo-text {
    display: flex;
    flex-direction: column;
  }

  .sponsor-name {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    color: #212322;
  }

  .sponsor-sub {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    color: #555;
  }

  .sponsor-center {
    text-align: center;
  }

  .sponsor-title {
    font-family: 'Inter', sans-serif;
    font-size: 1.5rem;
    font-weight: 800;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .sponsor-title {
      font-size: 1.25rem;
    }
    .sponsor-logo-item img {
      height: 2.5rem;
    }
  }

  /* Hero - more dramatic */
  .sponsor-hero {
    background: #212322;
    padding: 8rem 2rem 5rem;
    text-align: center;
  }

  .hero-inner {
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-eyebrow {
    display: inline-block;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #ea7600;
    margin-bottom: 1rem;
  }

  .sponsor-hero h1 {
    font-family: 'Have Heart', cursive;
    font-size: clamp(3rem, 10vw, 5rem);
    font-weight: 400;
    color: #f4f7ff;
    margin: 0 0 1.5rem;
    line-height: 1;
  }

  .hero-lead {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    color: #9ca3af;
    line-height: 1.6;
    margin: 0;
  }

  /* The Ask - conversational */
  .the-ask {
    padding: 5rem 1rem;
    background: #fff;
  }

  .ask-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  @media (max-width: 900px) {
    .ask-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .ask-text h2 {
    font-family: 'Inter', sans-serif;
    font-size: 2rem;
    font-weight: 800;
    color: #212322;
    margin: 0 0 1.5rem;
  }

  .ask-text p {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    color: #444;
    line-height: 1.7;
    margin: 0 0 1rem;
  }

  .ask-cta-text {
    font-weight: 600;
    color: #212322 !important;
  }

  .ask-stats {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .stat {
    border-left: 3px solid #ea7600;
    padding-left: 1rem;
  }

  .stat-number {
    display: block;
    font-family: 'Inter', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: #212322;
    line-height: 1;
  }

  .stat-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Tiers - organic, varied */
  .tiers-section {
    padding: 5rem 1rem;
    background: #f4f7ff;
  }

  .tiers-heading {
    font-family: 'Have Heart', cursive;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 400;
    color: #212322;
    text-align: center;
    margin: 0 0 0.5rem;
  }

  .tiers-subhead {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: #666;
    text-align: center;
    margin: 0 0 3rem;
  }

  .tiers-layout {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (max-width: 700px) {
    .tiers-layout {
      grid-template-columns: 1fr;
    }
  }

  .tier {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  }

  .tier-header {
    padding: 1.25rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .tier-platinum .tier-header { background: linear-gradient(135deg, #ea7600, #f1d44b); }
  .tier-gold .tier-header { background: #f1d44b; }
  .tier-silver .tier-header { background: #d1d5db; }
  .tier-bronze .tier-header { background: #d4a574; }

  .tier-label {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    color: #212322;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .tier-platinum .tier-label { color: #fff; }

  .tier-amount {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 800;
    color: #212322;
  }

  .tier-platinum .tier-amount { color: #fff; }

  .tier-body {
    padding: 1.5rem;
  }

  .tier-body p {
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    color: #555;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  .tier-link {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    color: #ea7600;
    text-decoration: none;
  }

  .tier-link:hover {
    text-decoration: underline;
  }

  /* Events - list style, not cards */
  .events-section {
    padding: 5rem 1rem;
    background: #212322;
  }

  .events-section h2 {
    font-family: 'Have Heart', cursive;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 400;
    color: #f4f7ff;
    text-align: center;
    margin: 0 0 0.5rem;
  }

  .events-intro {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: #9ca3af;
    text-align: center;
    margin: 0 0 3rem;
  }

  .events-list {
    max-width: 700px;
    margin: 0 auto;
  }

  .event-item {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    padding: 1.25rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    align-items: baseline;
  }

  .event-item:last-child {
    border-bottom: none;
  }

  .event-name {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: #f4f7ff;
  }

  .event-desc {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: #9ca3af;
    grid-column: 1;
  }

  .event-price {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 800;
    color: #f1d44b;
    grid-row: 1 / 3;
    grid-column: 2;
    align-self: center;
  }

  /* In-Kind - casual box */
  .inkind-section {
    padding: 4rem 1rem;
    background: #f4f7ff;
  }

  .inkind-box {
    max-width: 600px;
    margin: 0 auto;
    background: #fff;
    border-left: 4px solid #ea7600;
    padding: 2rem;
  }

  .inkind-box h3 {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 800;
    color: #212322;
    margin: 0 0 0.75rem;
  }

  .inkind-box p {
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  .inkind-link {
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    color: #ea7600;
    text-decoration: none;
  }

  .inkind-link:hover {
    text-decoration: underline;
  }

  /* Final CTA */
  .final-cta {
    padding: 5rem 1rem;
    background: linear-gradient(135deg, #ea7600, #f1d44b);
  }

  .cta-inner {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .final-cta h2 {
    font-family: 'Inter', sans-serif;
    font-size: 2rem;
    font-weight: 800;
    color: #212322;
    margin: 0 0 0.5rem;
  }

  .final-cta p {
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    color: #212322;
    margin: 0 0 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: #212322;
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    border-radius: 4px;
    transition: background 0.2s;
  }

  .cta-button:hover {
    background: #000;
  }

  .back-link {
    display: block;
    margin-top: 1.5rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
    color: #212322;
    text-decoration: none;
    opacity: 0.7;
  }

  .back-link:hover {
    opacity: 1;
  }
</style>
