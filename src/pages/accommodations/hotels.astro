---
import Layout from "../../layouts/Layout.astro"
import Container from "../../components/Container.astro"

const pageTitle = "Hotel Accommodations";
const pageDescription = "Find nearby hotels for the Phi Mu Delta 62nd National Conclave. Recommended hotels near Ohio Northern University in Ada, Ohio with special rates for attendees.";

const hotels = [
  {
    name: "Hampton Inn Lima",
    address: "1933 Roschman Ave, Lima, OH 45805",
    distance: "15 min from campus",
    price: "From $129/night",
    phone: "(419) 555-0101",
    amenities: ["Free Hot Breakfast", "Indoor Pool", "Fitness Center", "Free WiFi", "Business Center", "Free Parking"],
    description: "Our recommended choice for Conclave attendees. Modern rooms with comfortable bedding, complimentary hot breakfast, and excellent amenities.",
    featured: true
  },
  {
    name: "Fairfield Inn & Suites by Marriott",
    address: "2179 Elida Rd, Lima, OH 45805",
    distance: "20 min from campus",
    price: "From $109/night",
    phone: "(419) 555-0102",
    amenities: ["Free Breakfast", "Indoor Pool", "Fitness Center", "Free WiFi", "Business Center"],
    description: "Reliable Marriott quality with spacious rooms and a great complimentary breakfast to start your day.",
    featured: false
  },
  {
    name: "Holiday Inn Express",
    address: "1920 Roschman Ave, Lima, OH 45805",
    distance: "18 min from campus",
    price: "From $119/night",
    phone: "(419) 555-0103",
    amenities: ["Express Start Breakfast", "Pool", "Pet Friendly", "Free WiFi", "Free Parking"],
    description: "Pet-friendly accommodations with IHG's signature Express Start breakfast bar and comfortable rooms.",
    featured: false
  },
  {
    name: "Comfort Inn & Suites",
    address: "803 S Leonard Ave, Ada, OH 45810",
    distance: "5 min from campus",
    price: "From $99/night",
    phone: "(419) 555-0104",
    amenities: ["Free Breakfast", "Free WiFi", "Free Parking", "Microwave & Fridge"],
    description: "The closest hotel option to campus. Simple, comfortable, and convenient for easy access to all Conclave events.",
    featured: false
  }
]
---

<Layout title={pageTitle} description={pageDescription} includeMaterialSymbols={true}>
  <main class="pt-24 pb-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-[#212322] to-[#2a2b2a] py-16 sm:py-20">
      <Container>
        <div class="max-w-3xl">
          <a href="/#hotel-accommodations" class="inline-flex items-center gap-2 text-gray-400 hover:text-[#ea7600] transition-colors mb-6">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Home
          </a>
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
            Hotel <span class="text-[#ea7600]">Accommodations</span>
          </h1>
          <p class="text-xl text-gray-400 leading-relaxed">
            We've partnered with several nearby hotels to ensure you have a comfortable stay during the 62nd National Conclave. All hotels offer easy access to Ohio Northern University.
          </p>
        </div>
      </Container>
    </section>

    <!-- Hotels Grid -->
    <section class="py-16 sm:py-20">
      <Container>
        <div class="space-y-8">
          {hotels.map((hotel, index) => (
            <div class={`hotel-detail-card group relative bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 ${hotel.featured ? 'ring-2 ring-[#ea7600]' : ''}`}>
              <div class="flex flex-col lg:flex-row">
                <div class="lg:w-1/3 aspect-video lg:aspect-auto bg-gradient-to-br from-gray-200 to-gray-300 relative">
                  {hotel.featured && (
                    <div class="absolute top-4 left-4 z-10 px-4 py-2 bg-[#ea7600] text-white text-sm font-bold uppercase rounded-full">
                      Recommended
                    </div>
                  )}
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="material-symbols-outlined text-gray-400 text-6xl">hotel</span>
                  </div>
                </div>
                <div class="lg:w-2/3 p-8 lg:p-10">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4 mb-6">
                    <div>
                      <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 group-hover:text-[#ea7600] transition-colors mb-2">
                        {hotel.name}
                      </h2>
                      <p class="text-gray-500 flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        {hotel.address}
                      </p>
                    </div>
                    <div class="text-left sm:text-right">
                      <p class="text-3xl font-bold text-[#ea7600]">{hotel.price}</p>
                      <p class="text-sm text-gray-500">{hotel.distance}</p>
                    </div>
                  </div>

                  <p class="text-gray-600 mb-6 leading-relaxed">
                    {hotel.description}
                  </p>

                  <div class="flex flex-wrap gap-2 mb-8">
                    {hotel.amenities.map((amenity) => (
                      <span class="inline-flex items-center gap-1 px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                        <svg class="w-3 h-3 text-[#ea7600]" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {amenity}
                      </span>
                    ))}
                  </div>

                  <div class="flex flex-col sm:flex-row gap-4">
                    <a href={`tel:${hotel.phone}`} class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#212322] text-white font-semibold rounded-xl hover:bg-[#ea7600] transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                      Call to Book
                    </a>
                    <a href="#" class="inline-flex items-center justify-center gap-2 px-6 py-3 border-2 border-gray-200 text-gray-700 font-semibold rounded-xl hover:border-[#ea7600] hover:text-[#ea7600] transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                      </svg>
                      Get Directions
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </Container>
    </section>

    <!-- Info Section -->
    <section class="py-16 bg-gray-50">
      <Container>
        <div class="max-w-3xl mx-auto text-center">
          <h3 class="text-2xl font-bold text-gray-800 mb-4">Need Help Booking?</h3>
          <p class="text-gray-600 mb-6">
            Contact us if you need assistance with accommodation arrangements or have questions about transportation to and from the hotels.
          </p>
          <a href="mailto:conclave@phimudelta.org" class="inline-flex items-center gap-2 text-[#ea7600] font-semibold hover:underline">
            conclave@phimudelta.org
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </Container>
    </section>
  </main>
</Layout>

<style>
  .hotel-detail-card {
    animation: fadeSlideUp 0.6s ease-out both;
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
