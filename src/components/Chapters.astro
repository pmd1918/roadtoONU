<script is:inline>
// Add hover content to each chapter card
document.querySelectorAll('.chapter-cards').forEach(card => {
  const hoverContent = document.createElement('div');
  hoverContent.className = 'chapter-cards-hover-content';

  const universityName = document.createElement('div');
  universityName.className = 'chapter-cards-hover-name';
  universityName.textContent = `${card.dataset.fullChapterDesignation} - ${card.getAttribute('university')}`;

  const founded = document.createElement('div');
  founded.className = 'chapter-cards-hover-code';
  founded.textContent = card.getAttribute('founded');

  hoverContent.appendChild(universityName);
  hoverContent.appendChild(founded);
  card.appendChild(hoverContent);
});

// University to state mapping for chapter card to map communication
const universityToState = {
  'University of Connecticut': 'Connecticut',
  'University of New Hampshire': 'New Hampshire',
  'University of Vermont': 'Vermont',
  'Northwestern University': 'Illinois',
  'MIT': 'Massachusetts',
  'University of Michigan': 'Michigan',
  'University of Illinois': 'Illinois',
  'University of Maine': 'Maine',
  'University of Wisconsin': 'Wisconsin',
  'Susquehanna University': 'Pennsylvania',
  'UC Berkeley': 'California',
  'Ohio Northern University': 'Ohio',
  'Ohio State University': 'Ohio',
  'Boston University': 'Massachusetts',
  'University of Rhode Island': 'Rhode Island',
  'RPI': 'New York',
  'Wittenberg University': 'Ohio',
  'Oregon State University': 'Oregon',
  'Tufts University': 'Massachusetts',
  'New York University': 'New York',
  'UMass Amherst': 'Massachusetts',
  'University of Minnesota–Morris': 'Minnesota',
  'Trinity College': 'Connecticut',
  'University of Southern Maine': 'Maine',
  'Lock Haven University': 'Pennsylvania',
  'Kutztown University': 'Pennsylvania',
  'Keene State College': 'New Hampshire',
  'Tarkio College': 'Missouri',
  'Slippery Rock University': 'Pennsylvania',
  'University of Toledo': 'Ohio',
  'California University of Pennsylvania': 'Pennsylvania',
  'Mansfield University': 'Pennsylvania',
  'Indiana University of Pennsylvania': 'Pennsylvania',
  'Lycoming College': 'Pennsylvania',
  'Pennsylvania College of Technology': 'Pennsylvania',
  'Plattsburgh University': 'New York',
  'Frostburg State University': 'Maryland',
  'New England College': 'New Hampshire',
  'Longwood University': 'Virginia',
  'Shawnee State University': 'Ohio',
  'Rutgers University–New Brunswick': 'New Jersey',
  'Rutgers University–Camden': 'New Jersey',
  'Robert Morris University': 'Pennsylvania',
  'Penn State University': 'Pennsylvania',
  'Alabama University': 'Alabama',
  'Rhode Island College': 'Rhode Island',
  'Marywood University': 'Pennsylvania',
  'Temple University': 'Pennsylvania',
  'Stevenson University': 'Maryland',
  'Stockton College': 'New Jersey'
};

// Add data-state attribute to each chapter card
document.querySelectorAll('.chapter-cards').forEach(card => {
  const university = card.getAttribute('university');
  const state = universityToState[university];
  if (state) {
    card.dataset.state = state;
  }
});

// Add click handlers to chapter cards - dispatch event to map
document.querySelectorAll('.chapter-cards').forEach(card => {
  card.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();

    // Clear previous active state
    document.querySelectorAll('.chapter-cards').forEach(s => s.classList.remove('chapter-cards-active'));

    // Add active state to clicked card
    card.classList.add('chapter-cards-active');

    const state = card.dataset.state;
    if (state) {
      window.dispatchEvent(new CustomEvent('chapter-cards-clicked', {
        detail: { state, fromSwatch: true }
      }));
    }
  });
});

// Click anywhere outside cards to dismiss selection
document.addEventListener('click', () => {
  document.querySelectorAll('.chapter-cards').forEach(card => {
    card.classList.remove('chapter-cards-active');
  });
});

// Listen for map state clicks - highlight matching chapter cards
window.addEventListener('map-state-clicked', (event) => {
  const { state, fromSwatch } = event.detail;
  highlightStateSwatches(state, fromSwatch);
});

// Show only chapter cards from the selected state
function highlightStateSwatches(state, fromSwatch) {
  clearHighlights();

  // Hide non-matching cards, show matching ones
  const allCards = document.querySelectorAll('.chapter-cards');
  let visibleCount = 0;

  allCards.forEach(card => {
    if (card.dataset.state === state) {
      card.classList.remove('state-hidden');
      visibleCount++;
    } else {
      card.classList.add('state-hidden');
    }
  });

  // Apply dynamic styling based on visible count
  if (visibleCount > 0) {
    // Calculate margin and max-width based on count
    let margin, maxWidth;
    if (visibleCount === 1) {
      margin = '0';
      maxWidth = '350px';
    } else if (visibleCount === 2) {
      margin = '-5%';
      maxWidth = '300px';
    } else if (visibleCount <= 4) {
      margin = '-8%';
      maxWidth = '220px';
    } else if (visibleCount <= 6) {
      margin = '-10%';
      maxWidth = '180px';
    } else if (visibleCount <= 10) {
      margin = '-12%';
      maxWidth = '140px';
    } else {
      margin = '-15%';
      maxWidth = '100px';
    }

    let isFirst = true;
    allCards.forEach(card => {
      if (card.dataset.state === state) {
        card.classList.add('state-filtered');
        card.style.maxWidth = maxWidth;
        card.style.marginInlineStart = isFirst ? '0' : margin;
        isFirst = false;
      }
    });
  }
}

function clearHighlights() {
  document.querySelectorAll('.chapter-cards').forEach(card => {
    card.classList.remove('state-highlighted');
    card.classList.remove('chapter-cards-active');
    card.classList.remove('state-hidden');
    card.classList.remove('state-filtered');
    card.style.maxWidth = '';
    card.style.marginInlineStart = '';
  });
}

// Listen for reset - clear highlights
window.addEventListener('chapter-map-reset', clearHighlights);

// Listen for marker clicks on the map - highlight specific chapter card
window.addEventListener('chapter-marker-clicked', (event) => {
  const { fullName } = event.detail;

  // Remove previous active state from all cards (but keep filter)
  document.querySelectorAll('.chapter-cards').forEach(s => s.classList.remove('chapter-cards-active'));

  // Find and activate the clicked chapter's card
  const card = document.querySelector(`.chapter-cards[data-full-chapter-designation="${fullName}"]`);
  if (card) {
    card.classList.add('chapter-cards-active');
    // Scroll the card into view if needed
    card.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
  }
});

</script>
