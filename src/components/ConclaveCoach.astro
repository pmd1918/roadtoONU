<main>
  <section class="conclave-coach-section">
.stage
  .ground-line
    %div
      %span.line1
      %span.line2
      %span.line3
      %span.line1
      %span.line2
      %span.line3
  .tree-wrap
    .tree
      .stem
        .branch.branch1
        .branch.branch2
        .branch.branch3
      .leef.leef1
      .leef.leef2
  .welcome-sign.ohio
  .sign-board
    .sign-left
      .ohio-outline
      .ohio-script Ohio
    .sign-right
      .welcome-line WELCOME TO
      .big-lines
        %span ADA, OHIO
    .mount-rail
      - 5.times do
        %i.mount
  .sign-post
  .sign-post.left
  / NOTES (keep)
  .note-front
    - (1..12).each do
      .note-wrap
        .note
  .note-back
    - (1..8).each do
      .note-wrap
        .note

  .vehicle-body
    .wrap-body
      .body-cover
        .top-roof

        / SCHOOL BUS additions (INSIDE body-cover)
        .bus-label.shimmer Conclave Coach
        .marker-lights
          - (1..3).each do
            %i
        .stop-sign

        / passenger windows (INSIDE body-cover)
        .bus-windows
          - (1..16).each do
            %span

        / indicators (INSIDE body-cover so they sit on the body)
        .indi.back-top-indicator
        .indi.back-bottom-indicator

      / front coach is sibling of body-cover (inside wrap-body)
      .front-coach
        .windshield
        .nose
        .headlight
        .mirror-arm

      / lower trim + bumper (sibling of body-cover)
      .side-guard
        .shade
        .bumper.back
        .bumper.front
        .front-indicator

    / wheels MUST be children of vehicle-body (not wrap-body)
    .wheel-wrap.back
      .wheel-shadow
      .wheel
        .wheel-outer
          .wheel-cup
            - (1..4).each do
              %span
    .wheel-wrap.middle
      .wheel-shadow
      .wheel
        .wheel-outer
          .wheel-cup
            - (1..4).each do
              %span
    .wheel-wrap.middle2
      .wheel-shadow
      .wheel
        .wheel-outer
          .wheel-cup
            - (1..4).each do
              %span
    .wheel-wrap.front
      .wheel-shadow
      .wheel
        .wheel-outer
          .wheel-cup
            - (1..4).each do
              %span
  </section>
  <style>
    //custom mixins
@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  border-radius: $radius;
}
@mixin opacity($opacity) {
  -webkit-opacity: $opacity;
  -moz-opacity: $opacity;
  opacity: $opacity;
}
@mixin animation($animation) {
  -webkit-animation: $animation;
  -moz-animation: $animation;
  animation: $animation;
}
@mixin box-shadow($box-shadow) {
  -webkit-box-shadow: $box-shadow;
  -moz-box-shadow: $box-shadow;
  box-shadow: $box-shadow;
}
@mixin box-sizing($boxSizing) {
  -webkit-box-sizing: $boxSizing;
  -moz-box-sizing: $boxSizing;
  box-sizing: $boxSizing;
}
@mixin transform($transform) {
  -webkit-transform: $transform;
  -moz-transform: $transform;
  transform: $transform;
}
@mixin keyframes($name, $name1) {
  @-webkit-keyframes #{$name} {
    @content;
  }
  @-moz-keyframes #{$name} {
    @content;
  }
  @-ms-keyframes #{$name} {
    @content;
  }
  @keyframes #{$name} {
    @content;
  }
}

//colors settings
$body-primary: #212322;
$body-secondary: #ea7600;
$base: #212322;
$note: #212322;

// SCHOOL BUS TOKENS
$bus-yellow: #ea7600;
$bus-black: #212322;
$bus-trim: #212322;
$bus-glass: #f4f7ff;

* {
  margin: 0;
  padding: 0;
  @include box-sizing(border-box);
}

body {
  text-align: center;
  overflow: hidden;
}

.stage {
  $container-width: 900px;
  position: relative;
  min-height: 80vh;
  width: $container-width;
  margin: auto;
}


//ground base
.ground-line {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  overflow: hidden;
  height: 6px;

  div {
    width: 1800px;
    font-size: 0;
    @include animation(roadLine 3s infinite linear);
  }

  span {
    height: 6px;
    display: inline-block;
    background-color: $base;
    @include border-radius(6px);
    vertical-align: bottom;
    margin-right: 20px;
  }

  .line1 {
    width: 80px;
  }
  .line2 {
    width: 580px;
  }
  .line3 {
    width: 80px;
  }
}

//tree
.tree-wrap {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  overflow: hidden;
}
.tree {
  position: absolute;
  right: 0;
  margin-left: -30px;
  bottom: 6px;
  z-index: 8;
  @include animation(tree 6.2s infinite linear);

  .stem {
    width: 6px;
    @include border-radius(6px 6px 0 0);
    height: 100px;
    background-color: lighten($base, 5%);

    .branch {
      width: 4px;
      @include border-radius(4px);
      background-color: lighten($base, 5%);
      position: absolute;
      z-index: 10;
    }
    .branch1 {
      bottom: 25px;
      height: 30px;
      left: 10px;
      @include transform(rotate(45deg));
    }
    .branch2 {
      bottom: 40px;
      height: 20px;
      right: 8px;
      @include transform(rotate(-45deg));
    }
    .branch3 {
      bottom: 60px;
      height: 15px;
      left: 5px;
      @include transform(rotate(45deg));
    }
  }

  .leef {
    z-index: -1;
    @include border-radius(50%);
    position: absolute;
    background-color: #abec39;
    border: solid 4px lighten($base, 5%);
  }
  .leef1 {
    width: 48px;
    height: 48px;
    top: -15px;
    left: -22px;
  }
  .leef2 {
    width: 68px;
    height: 68px;
    top: 18px;
    left: -32px;
    &::after {
      content: "";
      width: 50%;
      height: 50%;
      position: absolute;
      background-color: #abec39;
      z-index: 9;
      left: 25%;
      @include border-radius(50%);
      top: -18px;
    }
  }
}
//Welcome sign start
.welcome-sign.ohio {
  left: -150px;
  bottom: 30px;
  transform: none;
  z-index: 7;
}

.sign-board {
  position: relative;
  width: 520px;
  height: 120px;
  background: #f4f7ff;
  border: 4px solid #212322;
  border-radius: 10px;
  overflow: visible;

  box-shadow:
    0 8px 0 rgba(0, 0, 0, 0.22),
    0 16px 30px rgba(0, 0, 0, 0.18);

  display: grid;
  grid-template-columns: 210px 1fr;
  align-items: center;
}

/* LEFT: Ohio mark */
.sign-left {
  position: relative;
  height: 100%;
  padding-left: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ohio-outline {
  width: 170px;
  height: 92px;
  background: transparent;
  border: 7px solid #00205b;
  border-radius: 14px;

  /* quick “Ohio-ish” silhouette feel */
  clip-path: polygon(
    18% 8%,
    54% 8%,
    60% 16%,
    76% 10%,
    90% 20%,
    86% 38%,
    94% 56%,
    78% 84%,
    58% 92%,
    44% 84%,
    30% 92%,
    20% 82%,
    12% 64%,
    16% 44%,
    10% 28%
  );
  filter: drop-shadow(0 2px 0 rgba(0, 0, 0, 0.18));
  z-index:18;
}

.ohio-script {
  position: absolute;
  font-family: "Inter", serif; /* swap to a script font if you have one */
  font-weight: 800;
  font-size: 62px;
  letter-spacing: -0.03em;
  color: #1f4f86;
  transform: rotate(-2deg);
}

/* RIGHT: Welcome copy */
.sign-right {
  padding-right: 16px;
  text-align: left;
  transform: none;
}

.welcome-line {
  font-family: "Inter", serif;
  font-weight: 900;
  font-size: 14px;
  letter-spacing: 0.28em;
  color: #c93535;
  margin-bottom: 6px;
}

.big-lines {
  font-family: "Inter", serif;
  font-weight: 1000;
  font-size: 34px;
  letter-spacing: 0.06em;
  color: #1f4f86;
  line-height: 0.92;
  text-transform: uppercase;

  span {
    display: block;
  }
}

.small-line {
  margin-top: 8px;
  font-family: "Inter", serif;
  font-weight: 700;
  font-size: 12px;
  letter-spacing: 0.12em;
  color: rgba(33, 35, 34, 0.65);
  text-transform: uppercase;
}

/* Bottom rail + mounting brackets */
.mount-rail {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -14px;
  height: 14px;
  background: $base;
  border-radius: 0 0 8px 8px;

  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  padding: 0 14px;
}

.mount {
  width: 16px;
  height: 10px;
  background: #a6a6a6;
  border: 3px solid $base;
  border-radius: 4px;
  box-shadow: 0 2px 0 rgba(0, 0, 0, 0.18);
}

/* Post */
.sign-post {
  width: 12px;
  height: 60px;
  background: $base;
  margin: 0 auto;
  border-radius: 0 0 8px 8px;
  box-shadow: 0 6px 0 rgba(0, 0, 0, 0.18);
}
.sign-post {
  left: 50%;
  transform: translateX(-50%);
}

.sign-post--left {
  right: 50%;           
  transform: none;
}
/* ===========================
   SCHOOL BUS BODY
   =========================== */
.vehicle-body {
  width: 640px;
  height: 220px;
  position: absolute;
  right: 15%;
  bottom: 33px;
  z-index: 9;
  @include border-radius(0px 0px 0 0px);
transform: translateX(-160px) scale(0.75) translateY(50px);


  .wrap-body {
    position: relative;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    @include animation(body 3s infinite ease);
  }

  /* ===========================
     BODY COVER (main skin)
     =========================== */
  .body-cover {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: visible;
    border: solid 5px $base;
    @include border-radius(15px 40px 0 15px);
    background: linear-gradient(to bottom, #ea7600 0%, #f1d44b 100%);

    // black rub rails
    &::before,
    &::after {
      content: "";
      position: absolute;
      left: -1px;
      width: calc(100% + 10px);
      height: 40px;
      background: $bus-trim;
      border-radius: 0px;
      opacity: 0.95;
      z-index: 4;
    }
    &::before {
      top: 100px;
    }
    &::after {
      top: 100px;
    }
    .top-roof {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 14px;
      background-color: $bus-yellow;
      border-bottom: solid 4px $base;
      z-index: 9;
    }

    .bus-label {
  position: absolute;
  left: 100px;
  top: 102px;
  z-index: 10;
  font-family: "Inter", serif;
  font-weight: 700;
  font-size: 30px;
  letter-spacing: 0.08em;
  color: #ea7600;
  text-transform: uppercase;
  pointer-events: none;
}
.shimmer {
  display: inline-block;
  position: relative;

  background: linear-gradient(
    110deg,
    rgba(244, 247, 255, 0.15) 40%,
    rgba(244, 247, 255, 0.95) 50%,
    rgba(244, 247, 255, 0.15) 60%
  );
  background-size: 200% 100%;
  background-position: 200% 0;

  -webkit-background-clip: text;
  background-clip: text;

  color: transparent;
  -webkit-text-fill-color: transparent;

  -webkit-text-stroke: 1px rgba(244, 247, 255, 0.18);
  text-shadow: 0 2px 0 rgba(0, 0, 0, 0.35);

  animation: shimmer 2.2s infinite linear;
}

@keyframes shimmer {
  from { background-position: 200% 0; }
  to   { background-position: -200% 0; }
}
    
    .marker-lights {
      position: absolute;
      right: 30px;
      top: 6px;
      display: flex;
      gap: 8px;
      z-index: 10;

      i {
        width: 10px;
        height: 10px;
        border: 3px solid $base;
        border-radius: 50%;
        background: #ff2d2d;
        @include box-shadow(0 3px 0 rgba(black, 0.15));
      }
    }

    /* ===========================
       PASSENGER WINDOWS
       =========================== */
    .bus-windows {
      position: absolute;
      left: 5px;
      right: 33px;
      top: 26px;
      height: 66px;
      display: grid;
      grid-template-columns: repeat(16, 1fr);
      gap: 8px;
      z-index: 2;
    }

    .bus-windows span {
      display: block;
      width: 100%;
      height: 100%;
      border: 3px solid $base;
      border-radius: 3px;
      background: rgba(244, 247, 255, 0.35);
      overflow: hidden;
      position: relative;

      &::after {
        content: "";
        position: absolute;
        top: -12px;
        left: -40%;
        width: 160%;
        height: 60%;
        transform: rotate(-12deg);
        background: rgba(255, 255, 255, 0.18);
      }
    }
  }

  /* ===========================
     INDICATORS (on body)
     =========================== */
  .indi {
    width: 24px;
    height: 10px;
    @include box-shadow(0 3px 0 darken($body-secondary, 6%));
    position: absolute;
    border: solid 3px $base;
    left: 10px;
    background-color: #ffa700;
    z-index: 10;

    &.back-top-indicator {
      top: 10px;
    }
    &.back-bottom-indicator {
      bottom: 60px;
    }
  }

  /* ===========================
     FRONT COACH (outside body-cover)
     =========================== */
  .front-coach {
    position: absolute;
    right: -210px;
    top: 11.7px;
    width: 180px;
    height: 100%;
    z-index: 10;
    pointer-events: none;
  }

  .front-coach .windshield {
    position: absolute;
    left: -59px;
    top: 0px;
    width: 90px;
    height: 111px;
    background: linear-gradient(
      to bottom,
      rgba(244, 247, 255, 0.25),
      rgba(10, 20, 24, 0.55)
    );
    border: 4px solid $base;
    border-radius: 0px 30px 0px 8px;
    overflow: hidden;
    transform: skewX(8deg);
    transform-origin: top right;
    z-index: 4;
  }

  .front-coach .windshield::after {
    content: "";
    position: absolute;
    top: -15%;
    left: -30%;
    width: 160%;
    height: 50%;
    transform: rotate(-8deg);
    background: rgba(255, 255, 255, 0.15);
    z-index: 4;
  }
  .front-coach .nose {
    position: absolute;
    right: 150px;
    top: -11px;
    width: 90px;
    height: 100%;
    background: linear-gradient(
      to bottom,
      #ea7600 0%,
      #ea7600 5%,
      #f1d44b 100%
    );
    border: 5px solid $base;
    border-left: none;
    border-radius: 0 45px 20px 0;
    overflow: hidden;
    z-index: 3;
    transform: skewX(8deg);
    transform-origin: top left;
  }

  .front-coach .nose::after {
    content: "";
    position: absolute;
    left: -123px;
    right: 0;
    bottom: -5px;
    height: 40px;
    border-top: 5px solid $base;
    border-radius: 0 0 16px 0;
    transform: rotate(90deg);
    z-index: 3;
  }
  .front-coach .headlight {
    position: absolute;
    right: 130px;
    bottom: 40px;
    width: 25px;
    height: 45px;
    background: #ffe400;
    border: 4px solid $base;
    border-radius: 9px;
    box-shadow: 0 3px 0 rgba(0, 0, 0, 0.18);
    z-index: 3;
  }

  .front-coach .mirror-arm {
    position: absolute;
    left: -5px;
    top: -8px;
    width: 60px;
    height: 8px;
    background: $body-primary;
    border: 4px solid $base;
    border-radius: 14px;
    transform: rotate(0deg);
    z-index: 5;
  }

  .front-coach .mirror-arm::after {
    content: "";
    position: absolute;
    left: 40px;
    top: 0px;
    width: 14px;
    height: 38px;
    background: $body-primary;
    border: 4px solid $base;
    border-radius: 14px;
  }
  .bumper {
    position: absolute;
    border: solid 4px $base;
    background-color: #a6a6a6;
    @include border-radius(4px);

    &.front {
      right: 0px;
      width: 22px;
      height: 22px;
      bottom: -10px;
    }
  }
  /* ===========================
     LOWER GUARD
     =========================== */
  .side-guard {
    height: 22px;
    bottom: 2px;
    background-color: $bus-black;
    border-top: solid 2px $base;
    left: 4px;
    width: calc(100% + 90px);
    position: absolute;
    z-index: 11;
    @include border-radius(0 0 0 10px);

    .shade {
      display: none;
    }

    .bumper {
      position: absolute;

      border: solid 4px $base;
      background-color: #a6a6a6;
      @include border-radius(4px);

      &.back {
        width: 29px;
        height: 10px;
        top: 6px;
        @include box-shadow(0 3px 0 rgba(black, 0.15));
        left: -15px;
      }
    }
    $panel-bg: #e9ecef;
    $vent-color: #6f7377;
    $vent-shadow: rgba(0, 0, 0, 0.25);

    $cols: 6;
    $vent-w: 22px;
    $vent-h: 10px;
    $gap-x: 10px;
    $gap-y: 10px;
  }
  /* ===========================
     WHEELS
     =========================== */
  .wheel-wrap {
    $wheel-size: 80px;
    width: $wheel-size;
    height: $wheel-size;
    position: absolute;
    z-index: 12;
    bottom: -($wheel-size/2);

    .wheel-shadow {
      width: 100%;
      height: 100%;
      display: block;
      border-top: solid ($wheel-size/2) $base;
      @include border-radius(50%);
      position: relative;
      @include animation(wheelShadow 3s infinite ease);
    }

    &.back {
      left: 22px;
    }
    &.middle {
      left: 20%;
      @include transform(translateX(-50%));
    }
        &.middle2 {
      left: 20%;
      @include transform(translateX(481%));
    }
    &.front {
      right: -20px;
    }

    .wheel {
      width: 76%;
      height: 76%;
      left: 12%;
      top: 12%;
      position: absolute;
      text-align: center;
      font-size: 0;
      @include border-radius(50%);

      &::after {
        content: "";
        top: 1px;
        left: 2px;
        height: 100%;
        position: absolute;
        width: calc(100% - 4px);
        @include box-shadow(inset 0 7px 0 #212322);
        @include border-radius(50%);
        z-index: 9;
      }

      .wheel-outer {
        position: absolute;
        width: 100%;
        background-color: #000;
        border: solid 3px $base;
        @include border-radius(50%);
        top: 0;
        left: 0;
        height: 100%;
        @include animation(wheel 0.4s infinite linear);
      }

      .wheel-cup {
        width: 60%;
        height: 60%;
        margin-top: 20%;
        display: inline-block;
        position: relative;
        background-color: darken($body-secondary, 20%);
        border: solid 3px darken($base, 5%);
        @include border-radius(50%);
        @include transform(rotate(45deg));
        padding: 5px 4px;

        &::after {
          content: "";
          width: 8px;
          position: absolute;
          left: 41%;
          top: 40%;
          height: 3px;
          background-color: darken($body-secondary, 40%);
          display: inline-block;
        }

        span {
          display: inline-block;
          width: 6px;
          height: 6px;
          margin: 1px;
          background-color: #a6a6a6;
          @include border-radius(50%);
          border: solid 1px darken($base, 5%);
        }
      }
    }
  }
}

/* ===========================
   NOTES
   =========================== */
.note-wrap {
  position: absolute;
  left: 0;
  margin-top: 0;
  top: 0;

  .note {
    width: 30px;
    height: 30px;
    position: relative;
    display: inline-block;
    font-size: 24px;
    color: $note;

    .circle1,
    .circle2,
    .square {
      display: none;
    }

    &::before {
      content: "♩";
      position: absolute;
      top: 0;
      left: 0;
      font-size: 30px;
      line-height: 1;
    }
  }
}

.note-front {
  position: absolute;
  right: 45%;
  bottom: 20%;
  z-index: 8;
  @include transform(rotate(10deg));

  .note-wrap {
    @include opacity(0);
    @for $i from 1 through 4 {
      &:nth-child(#{$i}) {
        @include animation(note1 5s infinite ease-in #{$i * 0.5}s);
      }
    }
    @for $i from 5 through 8 {
      &:nth-child(#{$i}) {
        @include animation(note2 6s infinite ease-in #{$i * 0.5}s);
      }
    }
    @for $i from 9 through 12 {
      &:nth-child(#{$i}) {
        @include animation(note3 4s infinite ease-in #{$i * 0.5}s);
      }
    }
  }
}

.note-back {
  position: absolute;
  left: 18%;
  bottom: 35%;
  z-index: 5;
  @include transform(rotate(-90deg));

  .note {
    @include transform(rotate(100deg));
  }

  .note-wrap {
    right: 0;
    @for $i from 1 through 4 {
      &:nth-child(#{$i}) {
        @include animation(note4 4s infinite ease-in #{$i * 0.5}s);
      }
    }
    @for $i from 5 through 8 {
      &:nth-child(#{$i}) {
        @include animation(note5 3s infinite ease-in #{$i * 0.5}s);
      }
    }
  }
}

//animation keyframes
@include keyframes(note1, note1 animation) {
  0% {
    @include opacity(0);
    @include transform(scale(0.2) rotate(0deg) translate3d(100px, 0, 0));
  }
  50% {
    @include opacity(1);
  }
  100% {
    @include opacity(0);
    @include transform(scale(0.8) rotate(-40deg) translate3d(-50px, -400px, 0));
  }
}
@include keyframes(note2, note2 animation) {
  0% {
    @include opacity(0);
    @include transform(scale(0.3) rotate(0deg) translate3d(100px, 0, 0));
  }
