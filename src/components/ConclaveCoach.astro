  <script>
    // Dynamic scaling for mobile
    function updateStageScale() {
      const wrapper = document.querySelector('.stage-wrapper') as HTMLElement;
      const stage = document.querySelector('.stage') as HTMLElement;
      if (wrapper && stage) {
        const viewportWidth = window.innerWidth;
        
        if (viewportWidth < 1200) {
          const availableWidth = wrapper.offsetWidth;
          const scale = availableWidth / 1200;
          stage.style.transform = `scale(${scale})`;
          wrapper.style.height = (550 * scale) + 'px';
        } else {
          stage.style.transform = '';
          wrapper.style.height = '550px';
        }
      }
    }
    
    // Debounce resize to avoid forced reflows
    let resizeTimeout: number;
    function debouncedScale() {
        clearTimeout(resizeTimeout);
        resizeTimeout = window.setTimeout(updateStageScale, 100);
    }
    
    updateStageScale();
    window.addEventListener('resize', debouncedScale, { passive: true });
    document.fonts.ready.then(updateStageScale);
    
    // Animated WebP with alpha works in all modern browsers
  </script>
