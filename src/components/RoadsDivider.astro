        align-items: center;
        gap: 1rem;
        white-space: nowrap;
        padding-right: 1rem;
    }

    .roads-divider-content img {
        width: 20px;
        height: 20px;
        display: block;
        flex: 0 0 auto;
    }

    .roads-divider-text {
        font-family: 'Have Heart', cursive;
        font-size: 1.25rem;
        color: #212322;
        font-weight: 400;
    }

    @keyframes roads-divider-marquee {
        from { transform: translateX(0); }
        to   { transform: translateX(-50%); }
    }

    @media (prefers-reduced-motion: reduce) {
        .roads-divider-track {
            animation: none;
        }
    }
</style>
