<style>
    .roads-divider {
        position: relative;
        width: 100%;
        height: 2.5rem;
        overflow: hidden;
        z-index: 10;
        background-color: #f4f7ff;
        margin-top: -4rem;
    }

    @media (min-width: 768px) {
        .roads-divider {
            margin-top: -5rem;
        }
    }

    /* Glass gradient layer */
    .roads-divider::before {
        content: "";
        position: absolute;
        inset: 0;
        pointer-events: none;
        z-index: 0;
        background:
            radial-gradient(120% 80% at 20% 0%, rgba(255,255,255,0.45), transparent 60%),
            radial-gradient(80% 120% at 80% 100%, rgba(234,118,0,0.18), transparent 55%),
            linear-gradient(180deg, #ea7600, #f1d44b);
        backdrop-filter: blur(14px) saturate(140%);
        -webkit-backdrop-filter: blur(14px) saturate(140%);
        border-bottom: 1px solid rgba(255, 255, 255, 0.20);
        box-shadow: 0 8px 24px rgba(234, 118, 0, 0.22);
    }

    .roads-divider-track {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        z-index: 2;
        width: 200%;
        animation: roads-divider-marquee 25s linear infinite;
        will-change: transform;
        opacity: 0.85;
        filter: brightness(0);
    }

    .roads-divider-content {
        flex: 0 0 auto;
        display: flex;
        align-items: center;
        gap: 1rem;
        white-space: nowrap;
        padding-right: 1rem;
    }

    .roads-divider-content img {
        width: 20px;
        height: 20px;
        display: block;
        flex: 0 0 auto;
    }

    .roads-divider-text {
        font-family: 'Have Heart', cursive;
        font-size: 1.25rem;
        color: #212322;
        font-weight: 400;
    }

    @keyframes roads-divider-marquee {
        from { transform: translateX(0); }
        to   { transform: translateX(-50%); }
    }

    @media (max-width: 768px) {
        .roads-divider {
            height: 2rem;
        }
        .roads-divider-content img {
            width: 16px;
            height: 16px;
        }
        .roads-divider-text {
            font-size: 1rem;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .roads-divider-track {
            animation: none;
        }
    }
</style>
