---
interface Props {
  class?: string;
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  noPadding?: boolean;
}

const { 
  class: className,
  maxWidth = 'lg',
  noPadding = false
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
  full: 'max-w-full'
};
---

<div class={`container ${maxWidthClasses[maxWidth]} ${noPadding ? '' : 'px-4 sm:px-6 lg:px-8'} mx-auto ${className || ''}`}>
  <slot />
</div>