<section class:list={["schedule-section", className]} id="schedule">
  <div class="schedule-container">
    <div class="schedule-header">
      <h2 class="schedule-title">Conclave Schedule</h2>
      <p class="schedule-subtitle">Four days of brotherhood, learning, and celebration</p>
    </div>
    
    <div class="schedule-timeline">
      {scheduleData.map((day, dayIndex) => (
        <div class="day-block" data-day={dayIndex}>
          <div class="day-header">
            <div class="day-badge">
              <span class="day-name">{day.day}</span>
              <span class="day-date">{day.date}</span>
            </div>
          </div>
          
          <div class="events-list">
            {day.events.map((event, eventIndex) => (
              <div class:list={["event-card", event.special && 'event-special']}>
                <div class="event-time">
                  <span class="time-text">{event.time}</span>
                </div>
                
                <div class="event-connector">
                  <div class="connector-line"></div>
                  <div class="connector-dot">
                    <span class="event-icon">{event.icon}</span>
                  </div>
                </div>
                
                <div class="event-details">
                  <h3 class="event-title">{event.title}</h3>
                  {event.location && (
                    <p class="event-location">
                      <span class="location-icon">üìç</span>
                      {event.location}
