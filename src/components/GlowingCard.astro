---
interface Props {
  class?: string;
}
const { class: className = "" } = Astro.props;
---

<section class:list={["glowing-card-section", className]}>
  <!---Content Area -->
  <div class="content-area">
    <h1>Content Area</h1>
  </div>
</section>

<style>
  .glowing-card-section {
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: relative;
    padding: 2rem 1rem;
  }

  @media (max-width: 768px) {
    .glowing-card-section {
      padding: 1.5rem 0.5rem;
    }
  }

  .content-area {
    min-height: 100vh;
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .content-area {
      min-height: 50vh;
    }
  }

  .content-area h1 {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    color: #212322;
    text-align: center;
  }
</style>
