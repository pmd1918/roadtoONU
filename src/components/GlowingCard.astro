<script>
  // Intersection observer to pause/play divider animations
  const glowingSection = document.querySelector('.glowing-card-section');
  if (glowingSection) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            glowingSection.classList.remove('paused');
          } else {
            glowingSection.classList.add('paused');
          }
        });
      },
      { rootMargin: '100px', threshold: 0 }
    );
    observer.observe(glowingSection);
  }

</script>

<style>
  /* Pause animations when not in view */
  .glowing-card-section.paused .divider-track,
  .glowing-card-section.paused .divider::before,
  .glowing-card-section.paused .divider::after {
    animation-play-state: paused !important;
  }

  /* ===========================
     SECTION
  ============================ */
  .glowing-card-section {
    width: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  /* ===========================
     DIVIDERS
  ============================ */
  .divider {
    width: calc(100% + 100px);
    margin-left: -50px;
    margin-right: -50px;
    height: 2.5rem;
    position: relative;
    overflow: hidden;
    z-index: 10;
    flex-shrink: 0;
  }

  .divider-top {
    position: sticky;
    top: 0;
    z-index: 20;
  }

  .divider-bottom {
    position: sticky;
    bottom: 0;
    z-index: 20;
  }

  .divider::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    background:
      radial-gradient(120% 80% at 20% 0%, rgba(255,255,255,0.45), transparent 60%),
      radial-gradient(80% 120% at 80% 100%, rgba(234,118,0,0.18), transparent 55%),
      linear-gradient(180deg, #ea7600, #f1d44b);
    backdrop-filter: blur(14px) saturate(140%);
    -webkit-backdrop-filter: blur(14px) saturate(140%);
    border-top: 1px solid rgba(255,255,255,0.35);
    border-bottom: 1px solid rgba(255,255,255,0.20);
    box-shadow: 0 8px 24px rgba(234,118,0,0.22), inset 0 1px 0 rgba(255,255,255,0.35);
  }

  .divider::after {
    content: "";
    position: absolute;
    inset: -60%;
    pointer-events: none;
    z-index: 1;
    background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,0.30), transparent 70%);
    mix-blend-mode: overlay;
    opacity: 0.45;
    filter: blur(1px);
    animation: divider-shimmer 10s ease-in-out infinite alternate;
  }

  @keyframes divider-shimmer {
    from { transform: translateX(-10%) translateY(-2%); }
    to   { transform: translateX(10%) translateY(2%); }
  }

  .divider-track {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    z-index: 2;
    width: 200%;
    animation: divider-marquee 20s linear infinite;
    will-change: transform;
    opacity: 0.75;
    filter: brightness(0);
  }

  @keyframes divider-marquee {
    from { transform: translateX(0); }
    to   { transform: translateX(-50%); }
  }

  .divider-bottom .divider-track { animation-direction: reverse; }

  .divider-content {
    flex: 0 0 50%;
    min-width: 50%;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    white-space: nowrap;
  }

  .divider-item {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
  }

  .divider-item img {
    width: 18px;
    height: 18px;
    display: block;
    flex: 0 0 auto;
  }

  .divider-text {
    font-weight: 500;
    font-size: 0.85rem;
    color: #212322;
  }

  /* ===========================
     CONTENT AREA
  ============================ */
  .content-area {
    min-height: 100vh;
    position: relative;
  }

</style>
